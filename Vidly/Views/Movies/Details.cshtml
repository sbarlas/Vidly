@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>


<ul>
    <li>
        Genre Type : @Model.Genre.GenreName
    </li>
    <li>
        Release Date : @Model.ReleaseDate.ToString("dd MMM yyy")
    </li>
    <li>
        Added Date : @Model.DateAdded.ToString("dd MMM yyy")
    </li>
    <li>
        Number in stock : @Model.NumberInStock
    </li>
    
</ul>

