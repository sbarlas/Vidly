@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "MainList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<br/>
@if(Model.Count > 0)
{
    <table cellspacing="3" border="1">
        <tr><th>Customer Name</th><th>Age</th><th>Active</th></tr>

        @foreach (var customerItem in Model)
        {
            <tr>
            
            <td>@Html.ActionLink(customerItem.Name, "Details", "Customers", new { Id = customerItem.Id }, null)</td>
                <td>@customerItem.Age</td>
                <td>@customerItem.IsActive</td>
            </tr>
        }

        </table>
        
}
else
{
    <text>There are no customers in the system</text>
}